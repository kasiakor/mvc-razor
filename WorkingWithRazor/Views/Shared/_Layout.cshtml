<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style type="text/css">
        div.layout {background-color : grey;}
        div.view {border : thin solid black; margin : 10px 0}
    </style>
    </head>
<body>
    @*RenderSection is replaced by Razor with the content of the section*@
    @*@if there are no corrsponding sections in the view mvc fr will throw an error*@
    @RenderSection("Header")
    <div class="layout">This is layout Header</div>

    @RenderBody()
    <div class="layout">This is layout Body</div>

    @*use false as below instead*@
    @if(IsSectionDefined("Footer"))
    {
        //missing section handled with false for optional 
        @RenderSection("Footer", false)
    }

    else
    {
       <div>This is default footer</div>
    }
    <div class="layout">This is layout Footer</div>

</body>
</html>